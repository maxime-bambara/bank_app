{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>Adress</th>
                <th>Gender</th>
                <th>State</th>
                <th>Birthday</th>
                <th>Account</th>
                <th>AccountId</th>
                <th>IdCardImg</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>AccountId</th>
                <th>Banker</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.adress }}</td>
                <td>{{ user.gender }}</td>
                <td>{{ user.state }}</td>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
                <td>{{ user.account }}</td>
                <td>{{ user.accountId }}</td>
                <td>{{ user.idCardImg }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.accountId }}</td>
                {% if user.banker is not null %}
                <td>{{user.banker.username}}</td>
                {% endif %}
                
                
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Validate</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
